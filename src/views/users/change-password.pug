extends ../base 

block content 
    if errorMessage 
        span=errorMessage
    form(method="POST")
        input(placeholder="password", name="oldPassword", type="password", required, minlength="5")
        input(placeholder="new password", name="newPassword", type="password", required, minlength="5")
        input(placeholder="new password confirm", name="newPassword2", type="password", required, minlength="5")
        input(type="submit", Value="Change Password")