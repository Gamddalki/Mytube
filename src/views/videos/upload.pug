extends ../base

block content 
    if errorMessage 
        span=errorMessage
    form(method="POST", enctype="multipart/form-data")
        label(for="video") Video File 
        input(type="file", accept="video/*", required, id="video", name="video")
        input(name="title", placeholder="Title", required, type="text", maxlength=100)
        input(name="description", placeholder="Description", required, type="text", maxlength=1000)
        input(name="hashtag", placeholder="Hashtags (Separate by comma)", required, type="text")
        input(value="Upload", type="submit")
