extends base.pug

block content  
    h4 Upload Video 
    if errorMessage 
        span=errorMessage
    form(method="POST")
        input(name="title", placeholder="Title", required, type="text")
        input(name="description", placeholder="Description", required, type="text")
        input(name="hashtag", placeholder="Hashtags (Separate by space)", required, type="text")
        input(value="Upload", type="submit")