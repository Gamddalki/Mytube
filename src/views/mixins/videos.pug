mixin videos(video)
    div 
        hr
        h4
            a(href=`/videos/${video.id}`)=video.title
        p=video.description
        div
            span #{video.views} #{video.views === 1 ? "view" : "views"}
            span #{video.likes} #{video.likes === 1 ? "like" : "likes"}
        small Posted #{video.createdAt}.
        hr