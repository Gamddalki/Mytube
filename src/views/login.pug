extend base.pug 

block content 
    if errorMessage 
        span=errorMessage
    form(method="POST")
        input(placeholder="id", name="username", type="text", required)
        input(placeholder="password", name="password", type="password", required)
        input(type="submit", Value="Login")
        br
        a(href="http://localhost:8421/login/oauth/authorise?client_id=42ddbda13dce63393048") Continue wuth Github &rarr;
    hr
    div 
        span Don't have an account?
            a(href="/join") Join Now &rarr;