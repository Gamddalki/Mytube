extends base

block content 
    if errorMessage 
        span=errorMessage
    form(method="POST")
        input(placeholder="id", name="username", type="text", required)
        input(placeholder="password", name="password", type="password", required)
        input(type="submit", Value="Login")
        include partials/social-login
    div.auth-switch
        span Don't have an account? 
            a(href="/join") Join Now &rarr;